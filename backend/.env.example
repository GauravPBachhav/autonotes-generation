# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# File Upload
MAX_FILE_SIZE=500000000  # 500MB in bytes
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Models
WHISPER_MODEL=base  # tiny, base, small, medium, large
SUMMARIZATION_MODEL=facebook/bart-large-cnn
MAX_SUMMARY_LENGTH=500
MIN_SUMMARY_LENGTH=100

# Processing
NUM_WORKERS=4
BATCH_SIZE=16
DEVICE=cpu  # cuda for GPU

# Database (Optional)
DATABASE_URL=sqlite:///./autonotes.db
# DATABASE_URL=postgresql://user:password@localhost/autonotes

# Redis (Optional - for async tasks)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/autonotes.log

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# API Keys (if using external APIs)
# OPENAI_API_KEY=your_key_here
# HUGGINGFACE_API_KEY=your_key_here
